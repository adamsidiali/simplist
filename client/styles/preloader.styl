.preloader
  background-color #efefef
  opacity 1
  color #ddd
  position fixed
  top 89px
  left 25vw
  right 0
  bottom 0
  display none
  z-index 999

  @media (max-width: 1400px)
    left 33.33vw

  @media (max-width: 600px)
    top 79px
    left 0
    background-color #111

  .fa
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
