.preloader
  background-color #fff
  opacity 1
  color #ddd
  position fixed
  top 60px
  left 33.33vw
  right 0
  bottom 0
  display none
  z-index 99999

  @media (max-width: 600px)
    top 0px
    left 0px


  .fa
    font-size 30px
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
