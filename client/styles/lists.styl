.lists-wrap
  flex 1
  margin 0
  display flex
  flex-wrap nowrap
  padding 0
  list-style none
  align-self stretch
  overflow hidden
  overflow-x visible
  background-color brand-color
  // background url('/img/family-beach-alt.jpg') no-repeat center center scroll
  // background-size cover


  @media (max-width: 600px)
    overflow-x hidden
    max-width 100vw


  .list
    flex 1
    box-sizing border-box
    padding 10px 20px
    margin 0
    border 0
    //border-right 1px solid rgba(0,0,0,0.2)
    max-width 25vw
    min-width 25vw
    display flex
    flex-direction column
    user-select none
    background-color transparent
    &:nth-child(odd)
       background-color rgba(0,0,0,0.04)

    &:first-of-type
      margin-left 25vw


    @media (max-width: 1400px)
      max-width 33.33vw
      min-width 33.33vw

      &:first-of-type
        margin-left 33.33vw


    @media (max-width: 900px)
      max-width 50vw
      min-width 50vw

    @media (max-width: 600px)
      max-width 100%
      min-width 100%
      padding 10px 10px

      &:first-of-type
        margin-left 0px
        margin-right 0px



    .list-header
      display flex
      flex-wrap wrap
      padding 20px 10px
      padding-bottom 10px
      margin -20px
      margin-bottom 10px
      justify-content space-between
      flex 0 0 auto
      background-color rgba(0,0,0,0.1)
      transition 200ms ease-in
      color #000

      @media (max-width: 600px)
        margin -10px
        margin-bottom 0
        padding 10px 5px

      &:hover
        transition 100ms ease-in
        background-color rgba(0,0,0,0.4)
        color #fff
        cursor pointer

      .bar
        flex 0 0 auto
        width 100%
        pointer-events none
        display flex
        justify-content flex-start

        &:hover
          cursor pointer

        .toggle-list-menu
          margin 0 10px
          line-height 24px
          flex 0 0 auto

          &:hover
            cursor pointer

      .list-menu
        display none
        width 100%
        margin 0px
        background-color transparent
        z-index 999

        .manage-list
          list-style none
          padding 0 5px
          box-sizing border-box
          margin 10px 0
          background-color transparent
          width 100%

          display flex
          flex-direction row
          flex-wrap wrap

          li
            flex 1
            display flex
            flex-direction column
            justify-content center
            // border-radius 100px
            text-align center
            background-color #fff
            padding 20px
            box-sizing border-box
            color #111
            margin 5px
            transition 100ms ease-in
            box-shadow 0 2px 3px rgba(0,0,0,0.2)

            .fa
              display block
              width 100%
              padding 0
              font-size 24px
              color #aaa
              margin auto 0
              text-align center


            &:hover
              background-color color5
              color #fff
              cursor pointer
              transition 100ms ease-in

            &:hover .fa
              padding-right 15px
              color #fff
              transition 100ms ease-in

        .add-tag
          margin 0
          padding 0 10px
          width 100%
          box-sizing border-box

          input
            outline none
            border none
            width 100%
            box-sizing border-box
            padding 10px
            font-size 1em
            box-shadow 0 1px 2px rgba(0,0,0,0.2)

        .list-tags
          list-style none
          margin 10px 5px
          background-color transparent
          padding 0px
          display flex

          li
            padding 10px
            flex 0 0 auto
            margin 5px
            display inline-block
            background-color color5
            box-shadow 0 1px 2px rgba(0,0,0,0.2)

            &:hover
              cursor default
              user-select none

            .fa-times
              opacity 0.4
              transition 200ms ease-in

              &:hover
                cursor pointer
                opacity 1
                transition 200ms ease-in

            .fa-tag
              margin 0 5px



    .list-items-wrap
      overflow scroll
      overflow-x hidden
      appearance none
      padding 0px
      margin-top 10px
      opacity 1
      transition 200ms ease-in
      flex 0 0 1

      .list-items
        list-style none
        overflow visible
        transition 100ms ease-in

        .item
          background-color #fff
          padding 0px
          // padding-top 5px
          margin-top 5px
          margin-bottom 5px
          font-weight 300
          transition 200ms ease-in
          display flex
          justify-content space-between
          flex-direction row

          p
            flex 1
            margin 0
            width 100%
            padding 10px
            font-size 1em
            font-weight 300
            animation itemSuccess 750ms both

          form
            display none
            flex 1
            margin 0
            padding 0

            input
              flex 1
              margin 0
              padding 11px
              box-sizing border-box
              border none
              font-size 1em
              font-weight 300
              width 100%
              background-color lighten(red, 75%)
              outline none

          &:hover
            cursor pointer

          &:first-of-type
            margin-top 0

          &:first-of-type:hover
            margin-top 0

          &:last-of-type
            margin-bottom 0

          &:last-of-type:hover
            margin-bottom 0

          .archive-item
            flex 0 0 auto
            background-color transparent
            padding 12px
            color #aaa
            font-size 14px
            opacity 0.2
            transition 200ms ease-in

            &:hover
              cursor pointer
              color red

            @media (max-width: 600px)
              opacity 0.5

          &:hover .trash-item
            opacity 1
            transition 200ms ease-in


    .list-items-wrap.hidden
      overflow hidden

      .list-items
        pointer-events none

      .list-items
        opacity 0.4
        transition 100ms ease-in

  .add-list-wrap
    border none
    padding 20px




.lists-wrap.wide
  margin-left 60px
