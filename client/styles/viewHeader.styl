.view-header
  padding 0px 20px
  min-height 60px
  background-color color5
  flex 0 0 auto
  margin 0
  position relative
  display flex
  align-items stretch
  justify-content flex-start

  @media (max-width: 600px)
    padding 0 10px

  .spacer
    flex 1

  .toggle-menu
    flex 1
    min-width 100%
    max-width 100%
    min-height 60px
    max-height 60px
    margin auto 0
    padding 0

    .fa
      color #fff

    ul
      list-style none
      width 100%
      display flex
      justify-content space-between
      align-items center

      li
        flex 0 0 auto
        margin-right 0px
        color #fff
        font-weight 300
        text-transform capitalize
        display flex
        align-items center
        justify-content flex-start

        &:hover
          cursor pointer

        .logo
          max-height 60px
          padding 5px
          padding-left 0
          box-sizing border-box
          display inline

        i
          margin 0
          padding 0
          margin-left -5px

      li.header-add
        display none

        @media (max-width: 600px)
          display block

          
    @media (max-width: 600px)
      display block

  .view-title
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    text-align center
    margin 0
    padding 0
    color #fff
    font-size 28px
    font-weight 700
