.view-header
  padding 0px 20px
  min-height 50px
  background-color #111
  flex 0 0 auto
  margin 0
  position relative
  display flex
  align-items stretch
  justify-content flex-start

  @media (max-width: 600px)
    padding 0 10px

  .spacer
    flex 1

  .toggle-menu
    flex 1
    min-width 100%
    max-width 100%
    margin auto 0
    padding 10px 0
    display none

    .fa
      color #fff

    ul
      list-style none
      width 100%
      display flex
      justify-content space-between

      li
        flex 0 0 auto
        margin-right 0px
        color #fff
        font-weight 300
        text-transform uppercase

        &:hover
          cursor pointer

        i
          margin-right 5px

    @media (max-width: 600px)
      display block

  .view-title
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    text-align center
    margin 0
    padding 0
    color #fff
    font-size 28px
    font-weight 700
