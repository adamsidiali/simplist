.view-header
  padding 10px 20px
  background-color color2
  flex 0 0 auto
  margin 0
  position relative
  display flex
  align-items stretch
  justify-content flex-start

  .spacer
    flex 1

  .toggle-menu
    flex 0 0 auto
    margin auto
    margin-right 20px
    padding 0

    .fa
      color #fff

    &:hover
      cursor pointer

  .view-title
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    text-align center
    margin 0
    padding 0
    color #fff
    font-weight 100

  .add-list
    flex 0 0 auto
    padding 0
    margin 0
    position relative

    input
      margin 0
      background-color rgba(0,0,0,0.2)
      padding 7px 15px
      color #fff
      min-width 33vw
      max-width 100%
      font-size 1em
      border-radius 30px
      border none
      outline none

    button.submitList
      background-color transparent
      color #ddd
      border none
      position absolute
      right 10px
      top 50%
      transform translate(-50%,-50%)
      outline none
