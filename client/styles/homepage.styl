.home
  position fixed
  top 50%
  left 50%
  transform translate(-50%,-50%)
  z-index -1
  text-align center
  font-size 30px
  text-transform center
  max-width 600px
  padding 0px

.home.sign-in
  background-color #35BA6B
  top 0
  left 0
  right 0
  min-height 100vh
  min-width 100vw
  max-height 100vh
  max-width 100vw
  transform none
  display flex
  flex-direction column
  justify-content center


  .logo-img
    flex 0 0 auto
    max-width 160px
    border-radius 100px
    margin 0 auto
    padding 10px
    border 10px solid rgba(0,0,0,0.2)

  h2
    font-weight 100
    font-size 50px
    color #fff
    margin-bottom 100px
    margin-top 40px

  #login-buttons
    position fixed
    font-size 18px
    top 10px
    right 10px
    color #efefef
