.home
  position fixed
  top 50%
  left 50%
  transform translate(-50%,-50%)
  z-index -1
  text-align center
  font-size 30px
  text-transform center
  max-width 600px
  padding 0px

.home.sign-in
  background-color #fff
  top 5px
  left 0
  right 0
  min-height 100vh
  min-width 100vw
  max-width 100vw
  transform none
  display flex
  flex-direction column
  justify-content flex-start

  img
    max-width 150px
    margin 50px auto
    flex 0 0 auto


  h2
    font-weight 100
    font-size 50px
    color #111
    margin 20px auto



  ul
    flex 0 0 auto
    padding-right 5px
    padding-left 5px
    display flex
    justify-content flex-end
    list-style none
    margin 0

    li
      padding 10px 20px
      margin 5px
      background-color rgba(0,0,0,0.2)
      border 0px
      font-size 18px
      font-weight 700
      color #111
      transition 200ms ease-in

      &:hover
        background-color rgba(0,0,0,0.6)
        color #fff
        cursor pointer
        transition 100ms ease-in
