/* GLOBAL IMPORTS */

@import 'nib'




/* VARIABLES */

font = "Roboto", sans-serif

color1 = #35524A
color2 = #627C85
color3 = #779CAB
color4 = #A2E8DD
color5 = #32DE8A

grey = #ddd


/* RESETS */

html, html *
  font-family font
  margin 0
  padding 0

h1
  font-size 36px
h2
  font-size 28px
h3
  font-size 24px
h4
  font-size 20px
h5
  font-size 16px
p
  font-size 14px



.sweet-overlay
  background-color rgba(255,255,255, 0.85)

.sweet-alert
  background-color transparent
  border-radius 0px
  padding 40px
  padding-top 20px

  input
    background-color #efefef
    outline none
    border none
    box-shadow none
    box-shadow 0 3px 4px rgba(0,0,0,0.25) !important

  .cancel,
  .confirm
    border-radius 0px


@import 'client/styles/import/keyframes.import'



